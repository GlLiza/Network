@model IEnumerable<Network.Views.ViewModels.UserListViewModel>

@{
    ViewBag.Title = "BrowseUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        @foreach (var item in Model)
            {
            <div class="row">
                @if (item.Image.Length != 0)
                {
                    <div class="col-lg-6">
                        <img class="image" src="data:image/png;base64, @Convert.ToBase64String(item.Image)" />
                    </div>
                }
                <div class="col-md-5">
                    <a href="@Url.Action("UsersPage", "User", new { id = item.Id }, null)" class="nameFirstname">
                        @Html.DisplayFor(modelItem => item.Name)
                       
                    </a>
                </div>              
            </div>
                <hr />
        }
    </div>

