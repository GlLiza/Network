@model Network.Views.ViewModels.AddUserViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("AddUser", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(m=>m.AspUserId)

    <div class="form-horizontal">
        <div class="container">

            <div class="stepwizard col-md-offset-3">
                <div class="stepwizard-row setup-panel">
                    <div class="stepwizard-step">
                        <a href="#step-1" type="button" class="btn btn-primary btn-circle">1</a>
                        <p>Step 1</p>
                    </div>
                    <div class="stepwizard-step">
                        <a href="#step-2" type="button" class="btn btn-default btn-circle" disabled="disabled">2</a>
                        <p>Step 2</p>
                    </div>
                </div>
            </div>
        </div>


        <div class="row setup-content" id="step-1">
            <div class="col-xs-6 col-md-offset-3">
                <div class="col-md-12">
                    <h3> Персональные данные</h3>

                    @*<div class="form-group">
                        <label class="control-label">Выберите свой тип пользователя </label>
                        <label>
                            <p> @Html.RadioButtonFor(x => x.TypeUser, "Обучающийся")  Обучающийся </p>
                            <p> @Html.RadioButtonFor(x => x.TypeUser, "Научный сотрудник") Научный сотрудник  </p>
                        </label>
                    </div>*@

                    <div class="form-group">
                        <label class="control-label">Имя и фамилия</label>
                        <input maxlength="100" name="Name" type="text" required="required" class="form-control" placeholder="Введите имя  и фамилию" />
                    </div>

                    <div class="form-group">
                        <label class="control-label">Photo</label>
                        <label class="btn btn-info btn-file">
                            Select photo <input type="file" name="Image" />
                        </label>
                    </div>

                    <button class="btn btn-primary nextBtn  btn-lg pull-right" type="button">Next</button>

                </div>
            </div>
        </div>



        <div class="row setup-content" id="step-2">
            <div class="col-xs-6 col-md-offset-3">
                <div class="col-md-12">
                    <h3> Контактная информация</h3>

                    @*<div class="form-group">
                            <label class="control-label">Email</label>
                            <input maxlength="200" name="Email" type="text" required="required" class="form-control" placeholder="Введите email" />
                        </div>*@
                    <div class="form-group">
                        <label class="control-label">Skype</label>
                        <input maxlength="200" name="Skype" type="text" required="required" class="form-control" placeholder="Введите skype" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Контактный номер телефона</label>
                        <input maxlength="200" name="PhoneNumber" type="text" required="required" class="form-control" placeholder="Введите номер телефона" />
                    </div>

                    <button class="btn btn-success btn-lg pull-right" id="add" type="submit">Save</button>

                </div>
            </div>
        </div>
    </div>
}

