@model IEnumerable<Network.Views.ViewModels.UserListViewModel>


<div id="listMembersDialog">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Список участников группы</h4>
            </div>

            <div class="modal-body">
                @if (Model.Count() != 0)
                {
                    foreach (var item in Model)
                    {
                         <div class="row">
                             @if (item.Image.Length != 0)
                             {
                                 <div class="col-lg-6">
                                     <img class="image" src="data:image/png;base64, @Convert.ToBase64String(item.Image)" />
                                 </div>
                             }
                             <div class="col-md-6">
                                 @Html.DisplayFor(modelItem => item.Name)
                             </div>

                         </div>

                    }
                    {
                        <div class="row">
                            В группе нет участников.
                        </div>
                    }
                }
         
                

                </div>
        </div>
    </div>
</div>





