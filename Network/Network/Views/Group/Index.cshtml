@model IEnumerable<Network.Views.ViewModels.GroupViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
    </div>
<nav class="navbar navbar-inverse" role="navigation">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-sidebar-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-sidebar-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li><a href="@Url.Action("Index", "User")"><span style="font-size: 16px;" class="pull-right hidden-xs showopacity glyphicon glyphicon-arrow-left"></span></a></li>
               @if (User.IsInRole("secretary"))
               {
                <li><a href="@Url.Action("CreateGroup", "Group")">Добавить группу<span style="font-size: 16px;" class="pull-right hidden-xs showopacity glyphicon"></span></a></li>
               }
                <li><a href="@Url.Action("Index", "Conference")">Найти группу<span style="font-size: 16px;" class="pull-right hidden-xs showopacity glyphicon"></span></a></li>
               
            </ul>
        </div>
    </div>
</nav>


<div class="jumbotron container-fluid">
    <div class="row page" align="center">
        Группы
      
    </div>
    <div class="scrolFriends ">
        <div class="row ">
            <div class="col-md-2 bold">
                Номер
            </div>

            <div class="col-md-4 bold">
               Специализация
            </div>

            <div class="col-md-3 bold">
                Руководитель
            </div>
            </div>
        <hr />
        <div class="row">
            @foreach (var item in Model)
            {
                @Html.HiddenFor(modelItem=>item.Id)
                <div class="row">
                    <div class="col-md-2">
                    @Html.DisplayFor(modelItem => item.Number)
                    </div>

                    <div class="col-md-4">
                        @Html.DisplayFor(modelItem => item.Specialization)
                    </div>

                    <div class="col-md-3">
                        @Html.DisplayFor(modelItem => item.NameHead)
                    </div>

                    <div class="col-md-3 btn-group">
                        <button class="btn dropdown-toggle" data-toggle="dropdown"><span>...</span></button>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Участники", "Group", "Group", new { groupId = item.Id}, null)</li>
                        @if (User.IsInRole("group_member"))
                        {
                            <li id="joinToGroup"><a href="#">Присоединиться к группе<span style="font-size: 16px;"></span></a></li>
                        }

                        @if (User.IsInRole("secretary"))
                        {
                            <li>@Html.ActionLink("Удалить", "Group", "Group", new { id = item.Id }, null)</li>
                        }
                        </ul>
                    </div>                 

                    </div>
                    <div id="joinMod" class="modal fade" data-url='@Url.Action("AddToGroup", "Group",new { id=item.Id})'>
                        <div id="joinContainer">
                        </div>
                    </div>

                <hr />
            }
        </div>
    </div>
</div>







@section Scripts{
    <script type="text/javascript">
        $(function () {
            $('#joinToGroup').click(function () {
                var url = $('#joinMod').data('url');

                $.get(url,
                    function (data) {
                        $('#joinContainer').html(data);

                        $('#joinMod').modal('show');
                    });

            });
        })
    </script>
}